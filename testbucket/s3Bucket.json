{
  "Description": "AWS IAM Role with S3 Bucket Policies\n",
  "Resources": {
    "IamRole1": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "s3.amazonaws.com"
                ]
              },
              "Action": [
                "s3:*"
              ],
              "Resource": "arn:aws:s3:::S3Bucket/*"
            }
          ]
        }
      }
    },
    "IamRole2": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "s3.amazonaws.com"
                ]
              },
              "Action": [
                "s3:GetObject s3:PutObject"
              ]
            }
          ]
        },
        "Resource": "arn:aws:s3::S3Bucket"
      }
    },
    "S3Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "AccessControl": "String"
      },
      "BucketName": "S3Bucket",
      "DeletionPolicy": "Retain"
    },
    "BucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "PolicyDocument": {
          "Id": "BucketPolicy",
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": [
                "PublicReadForGetBucketObjects, PublicWriteForPutObjects"
              ],
              "Effect": "Allow",
              "Principal": "*",
              "Action": [
                "s3:GetObject",
                "s3:PutObject"
              ],
              "Resource": [
                "",
                [
                  "arn:aws:s3:::",
                  "S3Bucket !Ref IamRole1 !Ref IamRole2",
                  "/*"
                ]
              ]
            }
          ]
        },
        "Bucket": "S3Bucket"
      },
      "Roles": [
        "IamRole1",
        "IamRole2"
      ]
    }
  },
  "Outputs": {
    "S3Bucket": {
      "Description": "S3 bucket Name",
      "Value": "S3Bucket"
    },
    "IamRole1": {
      "Description": "Iam Role to manage S3 Bucket",
      "Value": "IamRole1"
    },
    "IamRole2": {
      "Description": "Iam Role to access Read and Write in the Bucket",
      "Value": "IamRole2"
    },
    "BucketPolicy": {
      "Description": "S3 Bucket Polices",
      "Value": "BucketPolicy"
    },
    "Description": "Name of S3 bucket to hold website content"
  }
}
